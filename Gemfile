  gem 'sass-rails', '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'slim'
gem 'thin'
gem 'devise'
gem 'therubyracer'
gem "less-rails-bootstrap"
